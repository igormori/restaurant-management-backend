{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=restaurant_db;Username=postgres;Password=postgres",
    "//": "In production, inject 'ConnectionStrings:DefaultConnection' via Environment Variable"
  },
  "AllowedHosts": "*",
  "Cors": {
    "AllowedOrigins": []
  },
  "Jwt": {
    "Key": "your-super-secret-key-at-least-32-characters-long-for-development",
    "//": "In production, inject 'Jwt:Key' via Environment Variable or Secret Manager",
    "Issuer": "RestaurantManagement",
    "Audience": "RestaurantManagement",
    "ExpireMinutes": 60,
    "RefreshTokenExpireDays": 30
  },
  "Security": {
    "MaxFailedLoginAttempts": 5,
    "LockoutDurationMinutes": 15,
    "VerificationCodeExpiryMinutes": 15,
    "ResendCooldownSeconds": 60
  },
  "Email": {
    "SmtpServer": "smtp.gmail.com",
    "SmtpPort": 587,
    "SenderEmail": "noreply@restaurant.com",
    "SenderName": "Restaurant Management",
    "Username": "",
    "Password": "",
    "EnableSsl": true
  }
}